@model SetorViewModel

@{
    ViewData["Title"] = "Setor_Cadastro";
}

<div class="card-header" style="margin-top: -35px">
    <h1 style="padding: 5px; border-radius: 5px; font-size: xx-large;">Cadastro de setor</h1>
</div>
<div class="container-md row" style="margin-top: 30px">
    <div class="form-group col-md-12 form-control-file" style="margin-top: 30px;">
        <form asp-action="Setor_Salvar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="setor.Nome" class="form-control" />
                <span asp-validation-for="setor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Localização</label>
                <input asp-for="setor.Localizacao" class="form-control" />
                <span asp-validation-for="setor.Localizacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Data de cadastro</label>
                <input asp-for="setor.DataCadastro" class="form-control" />
                <span asp-validation-for="setor.DataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Empresa</label>
                <select asp-for="setor.EmpresaId" class="form-control" asp-items="ViewBag.Empresas"></select>
            </div>
            
            <div class="form-row col-md-12" style="margin-top: 10px;">
                <div class="col-md-6" style="display: flex; justify-content:flex-start;">
                    <a style="margin-right: 5px;" class="btn btn-primary btn-lg" asp-controller="Setor" asp-action="Setor_Lista">Voltar</a>
                </div>
                <div class="col-md-6" style="display: flex; justify-content:flex-end;">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
