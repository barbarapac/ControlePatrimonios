@model ControlePatrimonial.Models.Setor

@{
    ViewData["Title"] = "Setor_Detalhes";
}

<div class="card-header" style="margin-top: -35px">
    <h1 style="padding: 5px; border-radius: 5px; font-size: xx-large;">Setor</h1>
</div>

<div style="display:flex; justify-content:center">
    <div class="col-sm-9 col-lg-9 col-md-9" style="margin-top: 50px">
        <dl class="row">
            <dt class="col-sm-2">
                Nome:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-2">
                Localização:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Localizacao)
            </dd>

            <dt class="col-sm-2">
                Data de cadastro:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>

            <dt class="col-sm-2">
                Empresa:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Empresa.IdEmpresa)
            </dd>
        </dl>
        <div>
            <a class="btn btn-primary" asp-controller="Setor" asp-action="Setor_Lista">Voltar</a>
            <a class="btn btn-info" asp-controller="Setor" asp-action="Setor_Edicao" asp-route-idSetor="@Model.IdSetor" style="margin-right: 5px;">Editar</a>
        </div>
    </div>
</div>