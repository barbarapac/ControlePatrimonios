@model FuncionarioViewModel

@{
    ViewData["Title"] = "Funcionario_Lista";
}

<div class="card-header" style="margin-top: -35px">
    <h1 style="padding: 5px; border-radius: 5px; font-size: xx-large;">Funcionários</h1>
</div>

<div style="display:flex; justify-content:center">
    <div class="col-sm-10 col-lg-10 col-md-10" style="margin-top: 50px">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        E-mail
                    </th>
                    <th>
                        Tipo usuário
                    </th>
                    <th>
                        Telefone
                    </th>
                    <th>
                        CPF
                    </th>
                    <th>
                        Data cadastro
                    </th>
                    <th>
                        Setor
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Funcionairos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CnpjCpf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCadastro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Setor.Nome)
                        </td>
                        <td style="justify-content:flex-end;display:flex;">
                            <a asp-route-IdFuncionario="@item.IdFuncionario" style="margin-right: 5px;" class="btn btn-info btn-sm" asp-area="" asp-controller="Funcionario" asp-action="Funcionario_Detalhes">Detalhes</a>
                            <a asp-route-IdFuncionario="@item.IdFuncionario" style="margin-right: 5px;" class="btn btn-primary btn-sm" asp-area="" asp-controller="Funcionario" asp-action="Funcionario_Editar">Editar</a>
                            <a asp-route-IdFuncionario="@item.IdFuncionario" style="margin-right: 5px;" class="btn btn-danger btn-sm" asp-area="" asp-controller="Funcionario" asp-action="Funcionario_Excluir">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group">
            <div  style="margin-top: 10px; justify-content:flex-start; display: flex">
                <a style="margin-right: 5px;" class="btn btn-primary btn-lg" asp-controller="Funcionario" asp-action="Funcionario_Cadastro">Adicionar</a>
            </div>
        </div>
    </div>
</div>