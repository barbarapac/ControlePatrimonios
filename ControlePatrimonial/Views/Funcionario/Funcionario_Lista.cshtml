@model IEnumerable<ControlePatrimonial.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionario_Lista";
}


<div class="card-header" style="margin-top: -35px">
    <h1 style="padding: 5px; border-radius: 5px; font-size: xx-large;">Funcionários</h1>
</div>

<div style="margin-top: 50px">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Telefone
                </th>
                <th>
                    Rua
                </th>
                <th>
                    Bairro
                </th>
                <th>
                    Cidade
                </th>
                <th>
                    Complemento
                </th>
                <th>
                    CNPJ/CPF
                </th>
                <th>
                    Data cadastro
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complemento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CnpjCpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    <button asp-action="Edit" asp-route-id="@item.IdFuncionario" type="button" class="btn btn-secondary btn-sm">Editar</button>
                    <button asp-action="Details" asp-route-id="@item.IdFuncionario" type="button" class="btn btn-info btn-sm">Detalhes</button>
                    <button asp-action="Delete" asp-route-id="@item.IdFuncionario" type="button" class="btn btn-danger btn-sm">Exluir</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="form-group col-md-12" style="margin-top: 10px; justify-content:flex-start; display: flex">
        <button asp-action="Create" type="submit" class="btn btn-primary btn-lg">Adicionar</button>
    </div>
</div>
